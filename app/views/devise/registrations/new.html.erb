<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
   <div class="form-inputs"> 
  <div class="form-group">
    <%= f.label :firstname%>
  	<%= f.text_field :first_name, autofocus: true,class:"form-control"%><br>
  </div>  
  <div class="form-group">
    <%= f.label :lastname%>
  	<%= f.text_field :last_name,class:"form-control"%><br>
  </div>
  <div class="form-group">
  	<%= f.label :username%>
    <%= f.text_field :user_name,class:"form-control" %><br>
  </div>
  <div class="form-group">  
    <%= f.label :mobile_no%>
  	<%= f.text_field :mobile_no,class:"form-control" %><br>
  </div>
  <div class="form-group">  
    <%= f.label :email%>
    <%= f.text_field :email,class:"form-control" %><br>
  </div>
  <div class="form-group">  
    <%= f.label :password%>
    <%= f.password_field :password,class:"form-control", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %><br>
  </div>
  <div class="form-group">  
    <%= f.label :password_confirmation%>
    <%= f.password_field :password_confirmation,class:"form-control" %><br>
  </div>  
    <%= f.label :avatar%>
    <%= f.file_field :avatar %><br>
    <%= recaptcha_tags %>
  </div>
  <div class="form-actions">
    <%= f.submit "Sign up",class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
