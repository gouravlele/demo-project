<!DOCTYPE html>
<html>
  <head>
    <title>Association</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
     <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <% if user_signed_in? %>
          <a class="navbar-brand" href="welcomes">#</a>
           <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <li class="nav-item active">
                  <a class="nav-link" href="doctors">Doctor<span></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="patients">Patient</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="appointments">Appointment</a>
                </li>
                <li class="nav-item">
                  <%=link_to "Project", projects_path, class: "nav-link"%>        
                </li>
                <li class="nav-item">
                  <%=link_to "Developer", developers_path, class: "nav-link"%>        
                </li>
                <li class="nav-item">
                  <%=link_to "User", users_path, class: "nav-link"%>        
                </li>
                <li class="nav-item">
                  <%=link_to "Post", posts_path, class: "nav-link"%>        
                </li>
              </ul>
            </div>
         <%end%>   
          <p class="navbar-text pull-left">
            <% if user_signed_in? %>
              <strong>Welcome <%= current_user.user_name %></strong>
              <%= image_tag current_user.avatar.url(:thumb) %>
              <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
              <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
            <% else %>
              <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
              <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
            <% end %>
          </p>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
<style type="text/css">
  .navbar {
  background-color: #3B5998;
}
</style>