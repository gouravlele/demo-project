<b>Likes:-<%= comment.likes.count%></b>
<%if comment.likes.where(user_id: current_user.id).present?%>
  <%= link_to 'like',destroy_comment_like_likes_path(id:post.id,post_id:post.id,comment_id:comment.id,like_id:current_user.likes.find_by(likeable_id: comment.id).id,type:"COMMENT",button:"like"),method: :delete,remote:true,style: "color: blue;",class: "btn btn-small"%>
<%else%>
  <%= link_to 'like',create_comment_like_likes_path(id:post.id,post_id:post.id,comment_id:comment.id,type:"COMMENT",button:"like"),method: :post,remote:true, style: "color: gray;",class: "btn btn-small"%><br>
<%end%> 