
<div class="container-fluid">
<%= form_for @appointment,:url=>appointments_path,:method=>:post do |f|%>
    <div class="form-group", class="col-xs-4">
     <%= f.label :doctor_name%>
     <%= f.collection_select :doctor_id, Doctor.all, :id, :doctor_name %>
    </div>

    <div class="form-group", class="col-xs-4">
      <%= f.label :patient_name%>
     <%= f.collection_select :patient_id, Patient.all, :id, :patient_name %>
    </div>

    <div class="form-group", class: "col-xs-4">
        <%= f.label :appointment_date%>
        <%= f.text_field :appointment_date, "data-provide" => 'datepicker' %>
    </div>            
    
<button class="btn btn-primary " name="submit" type="submit">
        Submit
       </button>
    </div> 
 <%end%>
</div>  

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker()
  });
</script>   